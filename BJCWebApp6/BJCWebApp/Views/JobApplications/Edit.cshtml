@model BJCWebApp.Models.JobApplication

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>JobApplication</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <p>Application for "@ViewBag.Job.Title</p>
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="JobID" class="control-label"></label>
                @*<input asp-for="JobID" class="form-control" />*@
                <span asp-validation-for="JobID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserProfileID" class="control-label"></label>
                @*<input asp-for="UserProfileID" class="form-control" />*@
                <select asp-for="UserProfileID" class ="form-control" asp-items="ViewBag.UserProfileID">
                </select>
                <span asp-validation-for="UserProfileID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsInterested" /> @Html.DisplayNameFor(model => model.IsInterested)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CVFileID" class="control-label"></label>
                <select asp-for="CVFileID" class ="form-control" asp-items="ViewBag.CVFileID">
                </select>
                <span asp-validation-for="CVFileID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FreeText" class="control-label"></label>
                <input asp-for="FreeText" class="form-control" />
                <span asp-validation-for="FreeText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <input asp-for="JobID" type="hidden"/>
            <input asp-for="UserID" type="hidden"/>
            <input asp-for="DateApplied" type="hidden" />
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
